<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="css/style.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins&display=swap" rel="stylesheet">
    <link rel='stylesheet prefetch' href='https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css'>
    <link rel='stylesheet prefetch' href='https://fonts.googleapis.com/css?family=Raleway:200,500,700,800'>
    <title>Portfolio</title>
</head>
<body>
<header id="header">

    <div class="container">
        <div class="subcontainer">
            <nav class="navbar">
                <a class="companyname">MONEY BAGS</a>
                <ul class="social-menu">


                </ul>
                <ul class="nav-menu" id="active">
                    <li  class="nav-item">
                        <a  class="nav-link" href="/">MARKET</a>
                    </li>
                    <li class="nav-item">
                        <a id="active" class="nav-link" href="/portfolio">PORTFOLIO</a>
                    </li>
                    <li class="<%=user? 'gone':'nav-item'%>">
                        <a class="<%=user? 'gone':'nav-link'%>" href="/signup">SIGNUP</a>
                    </li>
                    <li class="<%=user? 'gone':'nav-item'%>">
                        <a class="<%=user? 'gone':'nav-link'%>" href="/login">LOGIN</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/logout">LOGOUT</a>
                    </li>


                </ul>

                <div class="hamburger">
                    <span class="bar"></span>
                    <span class="bar"></span>
                    <span class="bar"></span>
                </div>
            </nav>
        </div>
    </div>
</header>
<section class="portfolioSection">
    <h1>Portfolio</h1>
</section>

    <table class="styled-table">
        <thead>
        <tr>
            <th>Quantity</th>
            <th>Name</th>
            <th>Initial Price </th>
            <th>Profit</th>
            <th>Delete</th>

        </tr>
        </thead>
        <tbody>
        <% coin.forEach( el => { %>

        <tr class="active-row portfolioItem test" data-id='<%=el._id%>'>
            <td><%=el.amount%></td>
            <td>
                <img class="coinImages" src="<%= el.image %>" alt="">
                <%= el.coin %>

            </td>
            <td> <%= el.pricePaid %></td>
            <td id="profit" class="total">
                <%currencies.findIndex((element,index)=>{ %>

                    <% if(element.symbol === el.coin.toLowerCase()){%>

                    <%=(currencies[index].current_price.toFixed(2) * Math.floor(el.amount)) - Math.floor(el.pricePaid)  %>



            </td>
            <% } %>
            <% }) %>
            <td class='del'>Delete </td>
        </tr>

        <% }) %>
        <tr class="active-row portfolioItem test">
            <td>Total</td>
            <td></td>
            <td></td>
            <td id="currentBalance"></td>
            <td></td>
        </tr>
        </tbody>
    </table>






<section class="portfolioSection">
    <h2><%= user.userName %> has <%= amount %> coin</h2>
</section>


    <form action="/portfolio/createCoin" method='POST'>

        <select name="portfolioItem" id="">
            <% currencies.forEach( el => { %>
            <option  value="<%=el.symbol.toUpperCase()%>" ><%=el.name%></option>
            <% }) %>
        </select>
        <input type="text" placeholder="Enter Amount" name='amountOfCoin'>
        <input type="text" placeholder="Enter Price Paid" name='pricePaid'>
        <input type="submit">
    </form>



    <script src="js/main.js">

    </script>
</body>
</html>