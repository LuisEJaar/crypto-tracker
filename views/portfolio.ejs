<%- include('partials/header') -%>
<section class="portfolioSection">
    <h1>Portfolio</h1>
    <a href="/logout">LOGOUT</a>
    <table class="styled-table">
        <thead>
        <tr>
            <th>Quantity</th>
            <th>Name</th>
            <th>Initial Price </th>
            <th>Total</th>
            <th>Delete</th>

        </tr>
        </thead>
        <tbody>
        <% coin.forEach( el => { %>

        <tr class="active-row portfolioItem test" data-id='<%=el._id%>'>
            <td><%=el.amount%></td>
            <td>
                <img class="coinImages" src="<%= el.image %>" alt="">
                <%= el.coin %>

            </td>
            <td> <%= currencies[0].current_price %></td>
            <td class="total">
                <%currencies.findIndex((element,index)=>{ %>

                    <% if(element.symbol === el.coin.toLowerCase()){%>

                    <%=currencies[index].current_price.toFixed(2) * el.amount.toFixed(2)  %>



            </td>
            <% } %>
            <% }) %>
            <td class='del'>Delete </td>
        </tr>

        <% }) %>
        <tr class="active-row portfolioItem test">
            <td>Total</td>
            <td></td>
            <td></td>
            <td id="currentBalance"></td>
            <td></td>
        </tr>
        </tbody>
    </table>







    <h2><%= user.userName %> has <%= amount %> coin</h2>

    <form action="/portfolio/createCoin" method='POST'>

        <select name="portfolioItem" id="">
            <% currencies.forEach( el => { %>
            <option  value="<%=el.symbol.toUpperCase()%>" ><%=el.name%></option>
            <% }) %>
        </select>
        <input type="text" placeholder="Enter Amount" name='amountOfCoin'>
        <input type="submit">
    </form>
</section>
<section>


        <table class="styled-table">
            <thead>
            <tr>
                        <th>#</th>
                        <th>Name</th>
                        <th>Price</th>
                        <th>24h%</th>
            </tr>
            </thead>
            <tbody>
            <% currencies.forEach( el => { %>
    
            <tr class="active-row">
                <td><%= el.market_cap_rank %></td>-->
                        <td>
                            <img class="coinImages" src="<%= el.image %>" alt="">
                            <%= el.name %>
    
                        </td>
                        <td><%= el.current_price %></td>
                        <td class="<%= el.price_change_percentage_24h > 0? 'positiveNumber': 'negativeNumber'%>"><%= el.price_change_percentage_24h %></td>
            </tr>
            <% }) %>
            </tbody>
        </table>
</section>
<%- include('partials/footer') -%>